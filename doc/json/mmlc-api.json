    "contact": {
      "name": "admin@mathmlcloud.org"
    },
    "license": {
      "name": "MIT"
    }
  },
  "host": "api.mathmlcloud.org",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "tags": [
