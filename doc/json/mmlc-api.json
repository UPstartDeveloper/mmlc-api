    "/equation/{id}/feedback": {
      "post": {
        "summary": "Create feedback",
        "description": "Creates a feedback record for a given equation.",
        "tags": [
          "equation"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "equation identifier",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "feedback",
            "in": "body",
            "description": "feedback text",
