          "html5"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "html5",
            "in": "body",
            "description": "File to store",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Html5Input"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "HTML5 accepted",
            "schema": {
              "$ref": "#/definitions/Html5"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      }
    },
